    <title>Document</title>
  </head>
  <body>
    <div
      id="main"
      class="d-flex justify-content-center align-items-center flex-column m-3"
      style="height: 30rem"
    >
      <nav class="navbar navbar-light bg-light navbar-expand-lg m-2">
        <div class="container-fluid">
          <button class="btn btn-secondary" id="back-btn">Back</button>
        </div>
      </nav>
      <!-- 
      <nav
        class="navbar navbar-light rounded"
        style="background-color: #08246c"
      >
        <div class="container-fluid"></div>
      </nav> -->
      <div class="container border rounded" style="background-color: #f0f3f5">
        <div class="d-flex justify-content-center p-2">
          <h1 style="font-weight: bold; font-style: italic">Add Comment</h1>
        </div>
        <form autocomplete="off" id="add-comment-foam">
          <div class="form-group form-floating">
            <input
              type="text"
              class="form-control"
              id="comment"
              name="comment"
              placeholder="Comment"
              required
            />
            <label for="assigned-To-Name">Comment</label>
          </div>
          <div class="p-2"></div>
          <div class="d-flex justify-content-center p-2">
            <button
              type="submit"
              class="btn btn-primary mx-auto"
              id="add-comment-button"
            >
              Add
            </button>
          </div>
        </form>
      </div>
      <div
        id="hidden-div"
        style="display: none"
        class="alert m-4 alter-dismissible"
        role="alert"
      >
        <p id="hidden-div-message">
          The device of this serial Number Already exist
        </p>
      </div>
    </div>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
